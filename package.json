{
  "name": "i-converter",
  "packageManager": "yarn@3.1.1",
  "version": "0.0.1",
  "license": "MIT",
  "description": "your app description",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.sinanaksu.iconcon",
    "asar": false,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.png"
    },
    "nsis":{
      "oneClick": false,
      "include": "build/installer.nsh"
    }
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.7.2",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^22.14.5"
  }
}
